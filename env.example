# ==============================================================================
# Finance App - Environment Variables
# ==============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# üîê Authentication (Better Auth)
# ------------------------------------------------------------------------------
# Get Google OAuth credentials from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret

# Get Apple OAuth credentials from: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=your-apple-service-id
APPLE_CLIENT_SECRET=your-apple-client-secret-jwt
APPLE_APP_BUNDLE_IDENTIFIER=com.thomasscheiber.finance  # Optional, for native iOS apps
# Apple does NOT support localhost - use production URL or ngrok for testing
APPLE_REDIRECT_URI=https://yourdomain.com/api/auth/callback/apple  # Must match Apple Developer Console exactly

# Auth secret key (generate a random string using: openssl rand -base64 32)
AUTH_SECRET=your-super-secret-random-string-at-least-32-characters-long

# Base URL for authentication callbacks
# For PRODUCTION: https://yourdomain.com (Both Google and Apple will work)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Email allowlist (comma-separated, recommended for production)
# Leave empty to allow all authenticated users, or restrict to specific emails:
ALLOWED_EMAILS=user@example.com,admin@company.org


# ------------------------------------------------------------------------------
# üóÑÔ∏è Database
# ------------------------------------------------------------------------------
# MySQL connection string
DATABASE_URL=mysql://username:password@localhost:3306/financeapp


# ------------------------------------------------------------------------------
# üìä External APIs
# ------------------------------------------------------------------------------
# Alpha Vantage - Financial market data
# Get free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# NewsAPI - News articles and headlines
# Get free API key from: https://newsapi.org/register
NEWS_API_KEY=your-newsapi-key

# Hugging Face - Sentiment analysis for news
# Get free API token from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-token


# ------------------------------------------------------------------------------
# üîí Security
# ------------------------------------------------------------------------------
# Encryption key for sensitive data storage (generate random string)
ENCRYPTION_KEY=your-encryption-key-change-in-production

# Cron job authorization (generate random string for security)
# Used to protect the /api/cron/* endpoints from unauthorized access
CRON_SECRET=your-super-secret-cron-string


# ------------------------------------------------------------------------------
# üìß Email / SMTP (Optional - for notifications & alerts)
# ------------------------------------------------------------------------------
# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false  # Set to "true" for port 465, "false" for port 587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="FinanceApp Alerts <alerts@yourdomain.com>"


# ------------------------------------------------------------------------------
# üõ†Ô∏è Development (Optional)
# ------------------------------------------------------------------------------
# Set to "development" for local dev, "production" for deployment
NODE_ENV=development

# Enable Prisma query logging in development
# DEBUG=prisma:query
